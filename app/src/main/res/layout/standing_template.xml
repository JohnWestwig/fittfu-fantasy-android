<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <TextView
        android:id="@+id/standing_template_rank_textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:text="0"
        android:textSize="32dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/standing_template_lineup_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Lineup Name"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/standing_template_owner_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Lineup Name"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/standing_template_points_textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="12"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_margin="16dp" />
</LinearLayout>